{# templates/group_user/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Lista de Grupos de Usuario{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Grupos de Usuario</h1>
            <a href="{{ path('app_group_user_new') }}" class="btn btn-success">
                <i class="fas fa-plus-circle"></i> Crear Nuevo Grupo
            </a>
        </div>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success mt-3" role="alert">
                {{ message }}
            </div>
        {% endfor %}

        {% if groups is empty %}
            <div class="alert alert-info" role="alert">
                No hay grupos de usuario registrados.
            </div>
        {% else %}
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Descripci√≥n</th>
                            <th>Usuarios</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for group in groups %}
                        <tr>
                            <td>{{ group.id }}</td>
                            <td>{{ group.name }}</td>
                            <td>{{ group.description }}</td>
                            <td>{{ group.users|length }}</td>
                            <td>
                                <a href="{{ path('app_group_user_edit', {'id': group.id}) }}" class="btn btn-sm btn-primary">Editar</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>

     <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body">
                <h5 class="card-title">Desconectar</h5>
                <ul>
                <li> <a href="{{ path('app_admin_dashboard') }}" class="btn btn-light">Volver</a> </li>
                
                <ul>
            </div>
        </div>
    </div>
{% endblock %}