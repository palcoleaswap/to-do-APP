{# templates/group_user/new.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Crear Nuevo Grupo de Usuario{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Crear Nuevo Grupo</h1>
        
        {{ form_start(form) }}
            {{ form_row(form.name) }}
            {{ form_row(form.description) }}

            <div class="card mt-4">
                <div class="card-header">
                    <h5 class="card-title">Asignar Usuarios</h5>
                </div>
                <div class="card-body">
                    {{ form_row(form.users) }}
                </div>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a href="{{ path('app_group_user_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Volver a la lista
                </a>
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Guardar
                </button>
            </div>
        {{ form_end(form) }}
    </div>

    
{% endblock %}